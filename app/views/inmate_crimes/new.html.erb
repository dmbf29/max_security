<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Add a Crime for <%= @inmate.name %></h1>
      <%= simple_form_for [@inmate, @inmate_crime] do |f|  %>
        <%= f.association :crime, collection: Crime.order(name: :asc) %>
        <%= f.submit class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
