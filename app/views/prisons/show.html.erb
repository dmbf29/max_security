<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @prison.banner_url %>);">
  <div class="banner-content">
    <h1><%= @prison.name %></h1>
  </div>
</div>
<div class="container">
  <%= simple_form_for([@prison, @inmate], html: { class: 'form-inline' }) do |f| %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.input :crime, collection: Inmate::CRIMES %>
    <%= f.submit "Add", class: "btn btn-warning" %>
  <% end %>

  <% @prison.inmates.each do |inmate| %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= inmate.image_url %>);">
      <div class="card-description">
        <h2><%= inmate.name %></h2>
        <p><%= inmate.crime %></p>
      </div>
      <%= link_to inmate_path(inmate), class: "inmate-destroy-link", method: :delete do %>
        <i class="fas fa-syringe"></i>
      <% end %>
    </div>
  <% end %>
</div>
